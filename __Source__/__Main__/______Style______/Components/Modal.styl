	display: none !important

	&.is-open
		display: block !important

	#ControlDescription
		line-height: 1.5em

		code
			background-color: Color.Modal.StartButton.background
			color:            Color.Modal.StartButton.text
			border:           1px solid Color.Modal.StartButton.border
			padding:          0 0.3em

	#Repository
		margin-top: 4em

		.header
			width:         fit-content
			margin:        1.1em auto
			text-align:    center

		.link
			display:         flex
			justify-content: center

			button
				border:     none
				background: none
				height:     3em

				.octicon
					transition:
						transform 0.3s ease-in-out

				.octicon path
					transition: fill 0.3s ease-in-out
					fill: Color.Modal.Icon.default

				&:hover
					.octicon
						transform: scale(1.15)
					.octicon path
						fill: Color.Modal.Icon.hover
						transform: translate(-24, -24)


