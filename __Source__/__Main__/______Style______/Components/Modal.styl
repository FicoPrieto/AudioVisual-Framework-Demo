	//###  Primary Modifications  ###//
	//###############################//

	.modal__container
		// min-width:        30vw        !important
		// max-width:        40vw        !important
		width:            fit-content !important
		padding:          0px         !important
		height:           auto        !important
		border-radius:    0px         !important
		background-color: transparent !important
		overflow:         hidden      !important
		box-sizing:       border-box  !important

	.modal__header
		display:                 flex                          !important
		justify-content:         flex-end                      !important
		height:                  1.3em                         !important
		padding:                 1em                           !important
		background-color:        Color.Modal.Header.background !important
		color:                   Color.Modal.Header.text       !important
		position:                relative                      !important
		margin-bottom:           0px                           !important
		border-top-left-radius:  4px                           !important
		border-top-right-radius: 4px                           !important

		.modal__close
			position:    absolute                     !important
			top:         0                            !important
			right:       0                            !important
			height:      100%                         !important
			margin:      0 0.35em                     !important
			padding:     0.05em 0.05em 0px 0px        !important
			background:  transparent                  !important
			color:       Color.Modal.CloseButton.text !important
			border:      0                            !important
			font-size:   2.5em                        !important
			font-weight: 900                          !important
			cursor:      pointer                      !important

	.modal-content-content
		padding:                    30px                           !important
		border-bottom-left-radius:  4px                            !important
		border-bottom-right-radius: 4px                            !important
		background-color:           Color.Modal.Content.background !important
		color:                      Color.Modal.Content.text       !important

	.modal__content
		width:     fit-content !important
		margin:    auto        !important
		padding:   0           !important
		font-size: 1.4em       !important

	.fadeTransition
		display: none !important

		&.is-open{display: block !important}

		&[aria-hidden="false"]
			.overlay{animation: mmfadeIn 0.3s cubic-bezier(0, 0, 0.2, 1) !important}
			.sectionContainer{animation: mmfadeIn 0.3s cubic-bezier(0, 0, 0.2, 1) !important}

		&[aria-hidden="true"]
			.overlay{animation: mmfadeOut 0.3s cubic-bezier(0, 0, 0.2, 1) !important}
			.sectionContainer{animation: mmfadeOut 0.3s cubic-bezier(0, 0, 0.2, 1) !important}

		.sectionContainer, .overlay{will-change: transform !important}


